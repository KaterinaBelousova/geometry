CFLAGS = -g -Wall -Werror
CC = g++
EXECUTABLE = prog
SOURCES = src/main.cpp src/split.cpp src/geom.cpp
OBJECTS = $(SOURCES: .c=build/.o)

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) -o build/main

build/main.o: $(SOURCES)
	$(CC) $(CFLAGS) src/main.cpp -o build/main.o

geom.o: $(SOURCES)
	$(CC) $(CFLAGS) src/geom.cpp

split.o: $(SOURCES)
	$(CC) $(CFLAGS) src/split.cpp

clean: 
	rm -rf build/*.o
